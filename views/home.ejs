<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">

    <title>Content Management system</title>

</head>

<body>
    <%- include('layouts/header'); -%>
    <div class="container">
        <%- include('layouts/nav'); -%>
        <h2>All blogs</h2>
        <div>
            <table>
                <thead>
                    <th>Slug</th>
                    <th>Title</th>
                    <th>Description</th>
                    <% if(isAdmin) {%>
                    <th>Update</th>
                    <th>Delete</th>
                    <% } %>
                </thead>
                <tbody>
                    <% blogs.forEach(blog=>{ %>
                        <tr>
                            <td>
                                <%= blog.slug %>
                            </td>
                            <td>
                                <a href="/blogs/<%=blog.id%>" style="text-decoration: none; font-weight: bolder;" >
                                    <%= blog.title %>
                                </a>
                            </td>
                            <td class="content">
                                <img src="/images/<%=blog.image%>" alt="..."
                                    style="width: 60px; height: 60px; align-self: center; border-radius: 5px;">
                                <p style="margin: auto 10px;">
                                    <%= blog.snippet %>
                                </p>
                            </td>
                            <% if(isAdmin) {%>
                            <td>
                                <a href="/blogs/edit/<%=blog.id%>" style="text-decoration: none; font-weight: bold;">Update</a>
                            </td>
                            <td>
                                <form action="/blogs/<%=blog.id%>?_method=DELETE" method="post">
                                    <button type="submit" class="custom-link">Delete</button>
                                </form>
                            </td>
                            <% } %>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
            <%- include('layouts/footer'); -%>
        </div>
</body>

</html>